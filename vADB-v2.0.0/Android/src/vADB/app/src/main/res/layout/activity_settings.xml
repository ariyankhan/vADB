<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bg"
    android:id="@+id/root"
    tools:context="in.byter.vadb.SettingsActivity">

    <View
        android:background="#000"
        android:alpha="0.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000">

            <ImageView
                android:id="@+id/back_imageeview"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                android:padding="5dp"
                android:gravity="center"
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@drawable/separator_bg_top"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="14dp"
                    android:id="@+id/change_port_panel"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/panel_bg_state"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/change_port_title"
                            android:padding="2dp"
                            android:textSize="@dimen/SMALL_FONT_SIZE"
                            android:textStyle="bold"
                            android:textColor="@color/HEADINGS_COLOR"
                            android:text="Change Server Port"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/change_port_short_note"
                            android:textSize="@dimen/SMALLER_FONT_SIZE"
                            android:paddingLeft="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="Change adb server port if the default port is not available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/peofile_separator"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <LinearLayout
                    android:id="@+id/check_update"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="14dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/panel_bg_state"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/check_update_title"
                            android:padding="2dp"
                            android:textSize="@dimen/SMALL_FONT_SIZE"
                            android:textStyle="bold"
                            android:textColor="@color/HEADINGS_COLOR"
                            android:text="Check Update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/check_update_short_note"
                            android:textSize="@dimen/SMALLER_FONT_SIZE"
                            android:paddingLeft="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="Check app update and get latest version features"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
























