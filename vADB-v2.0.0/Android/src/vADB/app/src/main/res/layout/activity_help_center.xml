<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/theme_bg"
    tools:context="org.sristi.sristi.HelpCentreActivity">

    <View
        android:alpha="0.0"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000">

            <ImageView
                android:id="@+id/back_imageeview"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                android:padding="5dp"
                android:gravity="center"
                android:text="Help Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@drawable/separator_bg_top"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/help_title"
                        android:layout_marginBottom="3dp"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/SMALL_FONT_SIZE"
                        android:textStyle="bold"
                        android:textColor="@color/HEADINGS_COLOR"
                        android:text="Report Bugs and Get Help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/SMALL_FONT_SIZE"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:text="@string/HELP_TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#00000000"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:background="#00000000"
                            android:inputType="text"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:gravity="center_vertical"
                            android:id="@+id/email_input"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="5dp"
                            android:textCursorDrawable="@null"
                            android:lines="1"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:textSize="@dimen/SMALLER_FONT_SIZE"
                            android:hint="Email"
                            android:textColorHint="#ffbfbfd4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:background="@drawable/separator_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"/>

                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:paddingRight="5dp"
                        android:background="#00000000"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:inputType="textMultiLine"
                            android:minLines="6"
                            android:maxLines="6"
                            android:gravity="left"
                            android:id="@+id/message_input"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:textCursorDrawable="@null"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:background="#00000000"
                            android:textSize="@dimen/SMALLER_FONT_SIZE"
                            android:hint="Messages"
                            android:textColorHint="#ffbfbfd4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:background="@drawable/separator_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"/>

                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:background="@drawable/btn_pressed_2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/send_button"
                                android:fontFamily="sans-serif"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="11dp"
                                android:paddingBottom="11dp"
                                android:textSize="@dimen/SMALL_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:background="@drawable/btn_bg_state2"
                                android:text="SUBMIT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:id="@+id/pb_holder_panel"
                                android:visibility="gone"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ProgressBar
                                    android:id="@+id/pb"
                                    android:max="100"
                                    android:progress="50"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
