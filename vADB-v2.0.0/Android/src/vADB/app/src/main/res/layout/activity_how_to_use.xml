<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bg"
    android:id="@+id/root"
    tools:context="in.byter.vadb.HowToUseActivity">

    <View
        android:background="#000"
        android:alpha="0.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000">

            <ImageView
                android:id="@+id/back_imageeview"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <TextView
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                android:padding="5dp"
                android:gravity="center"
                android:text="How To Use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@drawable/separator_bg_top"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/op2"
                            android:layout_width="23dp"
                            android:layout_height="23dp" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/HEADINGS_COLOR"
                            android:textSize="@dimen/SMALL_FONT_SIZE"
                            android:text="Why this app ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:textSize="@dimen/SMALLER_FONT_SIZE"
                        android:text="@string/why_use_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/op2"
                            android:layout_width="23dp"
                            android:layout_height="23dp" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/HEADINGS_COLOR"
                            android:textSize="@dimen/SMALL_FONT_SIZE"
                            android:text="How to use this app ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:textSize="@dimen/SMALLER_FONT_SIZE"
                        android:text="@string/how_to_use_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:textSize="@dimen/SMALLER_FONT_SIZE"
                        android:text="@string/how_to_use_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:textSize="@dimen/SMALLER_FONT_SIZE"
                        android:text="@string/how_to_use_description_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/email_panel"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingLeft="20dp"
                            android:clickable="false"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:textColor="@color/OTHER_COLOR"
                            android:textSize="@dimen/SMALLER_FONT_SIZE"
                            android:text="ariyankhan46@gmail.com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/get_desktop_app_btn_panel"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/HEADINGS_COLOR"
                android:textSize="@dimen/SMALLER_FONT_SIZE"
                android:text="Download Desktop Helper App"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/get_desktop_app_btn"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/panel_bg_state"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_get_app_white_48px"
                    android:layout_width="21dp"
                    android:layout_height="21dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
















